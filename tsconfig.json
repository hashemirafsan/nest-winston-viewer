{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "Node",
    "declaration": true,
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,

    // ðŸ‘‡ Required for NestJS decorators
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    // ðŸ‘‡ Prevents property decorator issues in TS 5+
    "useDefineForClassFields": false
  },
  "include": ["src"]
}
